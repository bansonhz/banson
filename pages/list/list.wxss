@import "../../lib/style/font.wxss";

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

.container {
    background-color: #F2f2f2;
}

.banner {
	width: 100%;
	height: 70rpx;
	padding-top: 0rpx;
	/*margin-left: 15rpx;*/
}

.banner image {
	width: 100%;
	height: 0rpx;
}

.banner .swiper_box {
    width: 100%;
}

.banner2 {
	height: 65rpx;
  background: white;
	/*margin-left: 15rpx;*/
}

.banner2 image {
	width: 100%;
	height: 0rpx;
}
/*导航 nav*/
.top-bar {
  height: 70rpx;
  background: white; 
  white-space: nowrap;
  position: fixed;
  top:0;
  z-index:99;
}
.top-bar-item {
  display:inline-block;
  width: 120rpx;
  color: gray;
  text-align: center;
  font-size: 30rpx;
}
.top-bar-active{
  color: red;
  font-size: 34rpx;
}

/*辅助导航 nav2*/
.top-bar2 {
  background: white; 
  display: flex;
  flex-direction:row;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
/**其中子view垂直居中显示*/
  align-items: center;
  text-align: center;
  width: 100%;
  position: fixed;
  
  top:0;
  border-top: 0px solid #F2f2f2;
  padding: 20rpx;
  z-index:99;
}
.top-bar-item2 {
  color: gray;
  width: 100%;
  align-items: center;
  text-align: center;
  font-size: 34rpx;
}
.top-bar-active2 {
  color: gray;
  font-size: 34rpx;
}
.top-bar-item-list2 {
  display: flex;
	flex-direction: column;
	justify-content: center;/*子项横轴上居中对齐*/
	align-items: center;/*子项纵轴上居中对齐*/
}
.top-bar-item-text2 {
  display: flex;
	flex-direction: row;
	justify-content: center;/*子项横轴上居中对齐*/
	align-items: center;/*子项纵轴上居中对齐*/
}
.top-bar-item-text2 image{
  width: 30%;
  height: 60rpx;
  border-radius: 50%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

.venues_box {
  padding: 10rpx;
  z-index: 1;
  white-space: nowrap;
}

.venues_item {
    display: flex; 
    flex-direction: row;
    align-items: center;
    text-align: left;
    padding: 10rpx;
    border-bottom: 1px solid #bfbfbf;
}

/*右部描述*/
.venues_text {
	margin: 10rpx;
  height: 150rpx;
  width: 80%;
	display: flex;
	flex-direction: column;
	
}

.venues_item image{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}

 .venues_text .goods_name {
  color: black; 
  font-size: 8pt;
}

 .venues_text .goods_tag {
   color: gray; 
   font-size: 8pt;
   margin-top:0px;

}
.venues_text .goods_tag image{
  width: 10%;
  height: 20rpx;
}
.cuisine-item{
  display: flex;
  flex-direction:row;
  white-space: nowrap;
  text-align: left;
}
.cuisine-level{
  display: flex;
  flex-direction:row;
  white-space: nowrap;
  text-align: left;
}

.goods_prom {
    color: gray; 
    font-size: 8pt;
    margin-left:10rpx;
}
.search {
	width: 100%;
	height: 80rpx;
  display: flex;
	flex-direction: row;
	justify-content: center;/*子项横轴上居中对齐*/
	align-items: center;/*子项纵轴上居中对齐*/
  padding: 5rpx;
}

.search .wx-input {
	width: 70%;
	height: 30rpx;
	border: 1px solid #bfbfbf;
	border-radius: 120rpx;
  padding-left: 5rpx;
	/*margin: 30rpx 0 0 38rpx;*/
}

.search image {
	width: 5%;
	height: 40rpx;
	border: 0px solid #bfbfbf;
  margin-left:10rpx;
}
