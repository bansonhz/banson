page {
	background: #F2F2F2;
  width: 100%;
  height: 100%;
}

 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}
/*user info*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 250rpx;
  background: white;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}


/*menu list*/
.menu-area {
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: space-between;
  background: white;
  padding:0 20rpx;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}

.tableviewcell {
	width:100%;
  height: 100%;
  padding: 20rpx;
	color: #444;
	background: white;
	display: flex;
  flex-direction: row;
	align-items: center;
}
.linegray {
	border-bottom: 1rpx solid #eee;
}
/*icon*/
.tableviewcell image {
	width: 48rpx;
	height: 48rpx;
}

/*text*/
.tableviewcell text {
	font-size: 28rpx;
	margin-left: 20rpx;
}
.inlinetips {
  color: #999;
  font-size: 28rpx;
}

.clickBtn{  
  font-size:28rpx;
  width: 100%;
  background-color:white;  
  color:#444;  
  overflow:hidden;  
  margin-left:-4rpx;
  border: 0;
  text-align: left;
  margin: 0;
}  
  
.clickBtn::after {
  border: 0;
} 

/*button*/
.logout {
	margin: 30rpx;
  border: 0;
  background: transparent;
  color: #999;
  font-size: 24rpx;
}
.logout::after {
  border: 0;
}


/*order*/
.order-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin: 20rpx 0;
  padding: 20rpx 0;
}

.order {
	width: 33.3%;
	text-align: center;
}

.order image {
	width: 50rpx;
	height: 50rpx;
}

.order text{
	display: block;
	font-size: 30rpx;
	color: #333;
}