@import "../../../lib/style/font.wxss";

page {
	background: orange ;
}

.Hui-iconfont {
 font-family: "Hui-iconfont";
 font-size:30rpx;
}
.iconv-uparrow:after {
  content:'\e6d6';
}

.iconv-downarrow:after {
  content:'\e6d5';
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.order-item-banner {
	width: 100%;
	height: auto;
  display: flex;
	flex-direction: column;
  text-align: center;
  align-content: left;
	background: #DD514C;
  margin: 20rpx;
  border-radius: 10px;

}
.order-item {
	width: 100%;
	height: auto;
  display: flex;
	flex-direction: row;
  text-align: center;
  align-content: center;
	background: #DD514C;
  margin: 20rpx;
  border-radius: 10px;

}


/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: column;
	height:260rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	padding: 10rpx;
}

.carts-image {
  margin:20rpx;
	width:220rpx;
	height:200rpx;
}

/*立即按钮*/
.button {
	line-height: 80rpx;
	text-align: center;
	width:220rpx;
	height: 80rpx;
	background-color: #f60;
	color: white;
	font-size: 36rpx;
	border-radius: 5px;
	border: 0;
  padding-top: 0rpx;
 
}


/**/
.order_note {
	margin-left: 10rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
  font-size:14px;
	justify-content: space-between;
}

.order_note text {
	margin-left: 10rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
  font-size:14px;
	justify-content: space-between;
  text-align: left;
  background: #DD514C;
  color:white;
}

.order_note_end {
	margin-left: 10rpx;
	width: 100%;
  display: inline-block;
  font-size:14px;
}

.order_note_end text {
	margin-left: 10rpx;
  font-size:14px;
  background: #DD514C;
  color:white;
}

.from-image {
	width:10%;
  height:50rpx;
  border-radius: 50%;
  margin-top:40rpx;
}


/*logo部图片*/
.logo-image {
	width:80rpx;
	height:50rpx;
  border-radius: 50%;
}


/*右部描述*/
.carts-text {
	margin-left: 10rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: white;
	line-height: 38rpx;
  width:100%;
}



/*隐藏元素*/
.hidden {
	display: none;
}


/**/
.banner {
	width: 100%;
	height: 190rpx;
  display: flex;
	flex-direction: column;
	padding-top: 20rpx;
   background-color:orange; 
   text-align: center;
}
.banner text{
	width: 100%;
	height: auto;
	font-size:14px;
  color:black;
  text-align: center;

}
.banner image{
	width: 45%;
	height: 100rpx;
  margin:10rpx;

 
}

.swiper_box {
  width:100%;
}
.swiper_box .slide-image{
    width: 100%;
    height: 80%;
    display: inline-block;
    overflow: hidden;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}
